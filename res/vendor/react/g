# Create vendor directories if they don't exist
mkdir -p /var/www/html/genie/res/vendor/react-bootstrap/dist
mkdir -p /var/www/html/genie/res/vendor/bootstrap/css

# Download React Bootstrap UMD bundle
wget https://cdn.jsdelivr.net/npm/react-bootstrap@2.8.0/dist/react-bootstrap.min.js -O /var/www/html/genie/res/vendor/react-bootstrap/dist/react-bootstrap.min.js

# Download Bootstrap CSS
wget https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css -O /var/www/html/genie/res/vendor/bootstrap/css/bootstrap.min.css
